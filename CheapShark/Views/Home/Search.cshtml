@model IEnumerable<CheapShark.Models.Games>;
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@if (Model != null)
{
    <!-- Feature ctg Section Start -->
    
        <!-- Shop Collection Section Start -->
        <section id="shop-collection">
            <div class="container">
                <h1 class="section-title">Games</h1>
                <hr class="lines">
                    @foreach (var item in Model)
                    {
                        <div class="row">
                            <div class="col-md-3 col-sm-6 col-xs-12">
                                <div class="shop-product">
                                    <div class="product-box">
                                        <a href="#"><img src="@item.thumb" alt=""></a>
                                        <div class="cart-overlay">
                                        </div>
                                        
                                        <div class="actions">
                                            <div class="add-to-links">
                                                <a href="#" class="btn-cart"><i class="icon-basket"></i></a>
                                                <a href="#" class="btn-wish"><i class="icon-heart"></i></a>
                                                <a class="btn-quickview md-trigger" data-modal="modal-3"><i class="icon-eye"></i></a>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="product-info">
                                        <h4 class="product-title"><a href="/Home/GameDetails?gameId=@item.gameID">@item.external</a></h4>
                                        <div class="align-items">
                                            <div class="pull-left">
                                                <span class="price">$@item.cheapest</span>
                                            </div>
                                            <div class="pull-right">
                                                <div class="reviews-icon">
                                                    <i class="i-color fa fa-star"></i>
                                                    <i class="i-color fa fa-star"></i>
                                                    <i class="i-color fa fa-star"></i>
                                                    <i class="fa fa-star-o"></i>
                                                    <i class="fa fa-star-o"></i>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
            </div>
        </section>

    <!-- Feature ctg Section End -->
}
